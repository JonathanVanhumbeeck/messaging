<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE1E3"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingTop="?android:attr/actionBarSize" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <!--
             <odoo.controls.OForm
            android:id="@+id/odooFormMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="gone"
            odoo:model="mail.message" >
        -->

        <com.odoo.util.tags.TagsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="To:"
            android:inputType="textFilter"
            android:textColor="#828182" />
        <!--
             <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:editable="true"
            odoo:field_name="To"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall"
            odoo:with_label="false" />
        -->

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:editable="true"
            odoo:field_name="Subject"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall"
            odoo:with_label="false" />

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:editable="true"
            odoo:field_name="Body"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall"
            odoo:with_label="false" />
        <!-- </odoo.controls.OForm> -->
    </LinearLayout>

</ScrollView>