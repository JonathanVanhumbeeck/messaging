<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    odoo:model="mail.message" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <odoo.controls.OField
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oe_listview_background_selector"
            android:paddingLeft="3dp"
            odoo:binaryType="image"
            odoo:field_name="author_id"
            odoo:ref_column="image_small"
            odoo:with_label="false" >
        </odoo.controls.OField>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <odoo.controls.OField
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                odoo:field_color="#414141"
                odoo:field_name="author_id"
                odoo:field_textAppearance="?android:attr/textAppearanceSmall"
                odoo:singleLine="true"
                odoo:with_label="false" />

            <odoo.controls.OField
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                odoo:field_color="#414141"
                odoo:field_name="author_id"
                odoo:field_textAppearance="?android:attr/textAppearanceSmall"
                odoo:ref_column="email"
                odoo:singleLine="true"
                odoo:with_label="false" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBtnStar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:contentDescription="Starred"
            android:src="@drawable/ic_action_starred" />

        <ImageView
            android:id="@+id/imgBtnReply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:contentDescription="Reply"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_action_social_reply" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txvTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:text="To:" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <odoo.controls.OField
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                odoo:customLayout="@layout/message_detail_to_layout"
                odoo:field_name="partner_ids"
                odoo:ref_column="name"
                odoo:with_label="false" >
            </odoo.controls.OField>

            <odoo.controls.OField
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                odoo:displayPattern="MMM dd,  hh:mm a"
                odoo:field_name="date"
                odoo:with_label="false" >
            </odoo.controls.OField>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgVotenb"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="right|bottom"
            android:layout_weight="0.3"
            android:background="@drawable/vote_background_selector_gray"
            android:contentDescription="ImgVotenb"
            android:fontFamily="sans-serif-condensed"
            android:paddingRight="5dp"
            android:src="@drawable/ic_thumbs_up_unselected_dark_tablet"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#838383" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="#eeeeee" />

    <odoo.controls.OField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        odoo:field_name="body"
        odoo:with_label="false" >
    </odoo.controls.OField>

</odoo.controls.OForm>