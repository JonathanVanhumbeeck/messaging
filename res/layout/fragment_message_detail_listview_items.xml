<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="?android:attr/actionBarSize" >

    <odoo.controls.OForm
        android:id="@+id/odooFormMessagesDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        odoo:model="mail.message" >

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:field_name="subject"
            odoo:field_textAppearance="?android:attr/textAppearanceMediumInverse"
            odoo:with_label="false" >
        </odoo.controls.OField>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/odoo_purple" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Image Contact"
                android:src="@drawable/ic_action_user" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp" >

                <odoo.controls.OField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    odoo:field_name="author_id"
                    odoo:with_label="false" />

                <odoo.controls.OField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    odoo:field_name="author_id"
                    odoo:with_label="false" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgBtnStar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:contentDescription="Starred"
                android:src="@drawable/ic_action_starred"
                android:tint="@color/odoo_purple_tran" />

            <ImageView
                android:id="@+id/imgBtnReply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:contentDescription="Reply"
                android:src="@drawable/ic_action_social_reply" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <odoo.controls.OField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    odoo:field_name="author_id"
                    odoo:with_label="false" >
                </odoo.controls.OField>

                <odoo.controls.OField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    odoo:field_name="date"
                    odoo:with_label="false" >
                </odoo.controls.OField>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgVotenb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:contentDescription="ImgVotenb"
                android:src="@drawable/ic_thumbs_up_unselected_dark_tablet"
                android:tint="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eeeeee" />

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:field_name="body"
            odoo:with_label="false" >
        </odoo.controls.OField>
    </odoo.controls.OForm>

</ScrollView>