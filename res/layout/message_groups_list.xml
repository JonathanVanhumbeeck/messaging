<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    odoo:model="mail.group" >

    <include
        android:id="@+id/groupSyncWaiter"
        layout="@layout/message_listview_header"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" />

    <include
        android:id="@+id/loadingProgress"
        layout="@layout/listview_data_loading_progress"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" />

    <odoo.controls.OList
        android:id="@+id/listGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        odoo:custom_layout="@layout/message_groups_list_item" >
    </odoo.controls.OList>

</odoo.controls.OForm>