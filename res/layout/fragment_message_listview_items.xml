<odoo.controls.OForm xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    odoo:background_selector="@drawable/oe_listview_background_selector"
    odoo:model="mail.message" >

    <LinearLayout
        android:id="@+id/messageArchiveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaa"
        android:divider="?android:dividerVertical"
        android:dividerPadding="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:showDividers="middle"
        android:visibility="gone" >

        <TextView
            style="?android:textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="?android:listPreferredItemPaddingLeft"
            android:text="Archived"
            android:textColor="#fff" />

        <ImageButton
            android:id="@+id/undoArchived"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_action_content_undo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageListViewItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <odoo.controls.OField
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                odoo:fieldTextStyle="bold"
                odoo:field_color="#414141"
                odoo:field_name="subject"
                odoo:field_textAppearance="?android:attr/textAppearanceMedium"
                odoo:singleLine="true"
                odoo:with_label="false" >
            </odoo.controls.OField>

            <odoo.controls.OField
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                odoo:fieldTextStyle="bold"
                odoo:field_name="date"
                odoo:field_textAppearance="?android:attr/textAppearanceSmall"
                odoo:with_label="false" >
            </odoo.controls.OField>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:orientation="horizontal" >

            <odoo.controls.OField
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                odoo:field_name="body"
                odoo:field_textAppearance="?android:attr/textAppearanceSmall"
                odoo:textLines="2"
                odoo:with_label="false" />

            <ImageView
                android:id="@+id/imgMessageStarred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_action_starred"
                android:tint="#414141" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2" >

            <odoo.controls.OField
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                odoo:fieldTextStyle="bold"
                odoo:field_color="#414141"
                odoo:field_name="author_id"
                odoo:field_textAppearance="?android:attr/textAppearanceSmall"
                odoo:with_label="false" >
            </odoo.controls.OField>

            <TextView
                android:id="@+id/txvChilds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#414141" />

            <odoo.controls.OField
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0099cc"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                odoo:field_color="#fff"
                odoo:field_name="type"
                odoo:field_textAppearance="?android:attr/textAppearanceSmall"
                odoo:with_label="false" >
            </odoo.controls.OField>
        </LinearLayout>
    </LinearLayout>

</odoo.controls.OForm>